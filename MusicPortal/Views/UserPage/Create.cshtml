@model MusicPortal.Models.Music

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Track</h2>

@using (Html.BeginForm("Create","UserPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        <div class="container">
        <form class="form-inline">
            <div class="form-group">
                <input type="file" name="file">
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label"})
                @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
            </div>
            <div class="dropdown">
                @Html.DropDownListFor(music => music.GanersId, ViewBag.ListGeners as SelectList, new {@class = "form-control"})
            </div>
            <br /><br />

            <button type="submit" name="submit" value="Upload" class="btn btn-default">Upload</button>
        </form>
        <br/><br />
        <br />


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>

}


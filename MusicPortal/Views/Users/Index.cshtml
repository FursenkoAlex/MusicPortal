@model IEnumerable<MusicPortal.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/><br/><br/>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusUser)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.StatusAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusUser)
            </td>
            <td>

                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                @Html.ActionLink("Edit", "Edit", new {id = item.Id})


            </td>
        </tr>
    }

</table>

@Html.ActionLink("Back to Track List", "Index", "UserPage" )
